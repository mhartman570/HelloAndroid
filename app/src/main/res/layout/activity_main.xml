<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.helloandroid.MainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/udacity"/>
    <TextView
        android:id="@+id/udacity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/street_text_view"
        android:text="Udacity"
        android:textSize="24sp"
        android:fontFamily="sans-serif-light"
        android:textColor="#64FFDA"
        android:textStyle="bold|italic"
        android:layout_alignParentLeft="true"
        android:paddingLeft="20dp"/>
    <TextView
        android:id="@+id/street_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/city_text_view"
        android:layout_alignParentLeft="true"
        android:text="2465 Latham St"
        android:textSize="24sp"
        android:fontFamily="sans-serif-light"
        android:textColor="#64FFDA"
        android:textStyle="bold|italic"
        android:paddingAbove="10dp"
        android:paddingLeft="20dp"/>
    <TextView
        android:id="@+id/city_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/phone_number_text_view"
        android:layout_alignParentLeft="true"
        android:text="Mountain View, CA 94043"
        android:textSize="24sp"
        android:fontFamily="sans-serif-light"
        android:textColor="#64FFDA"
        android:textStyle="bold|italic"
        android:paddingAbove="10dp"
        android:paddingLeft="20dp"/>
    <TextView
        android:id="@+id/phone_number_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:text="650-555-5555"
        android:textSize="24sp"
        android:fontFamily="sans-serif-light"
        android:textColor="#64FFDA"
        android:textStyle="bold|italic"
        android:paddingAbove="10dp"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"/>

</RelativeLayout>